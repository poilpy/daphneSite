---

import { Image } from 'astro:assets';

interface Props {
	variant?: 'offset' | 'small';
}

const { variant } = Astro.props;
---

<ul class:list={['grid', { offset: variant === 'offset', small: variant === 'small' }]}
	style="
		--quantity: 8;">
	<Image class="imageSpread"
		style="--position: 1"
		alt="grid1."
		width=" 100"
		height="200"
		src="/assets/home/zoe blazer.jpg"
	/>

	<Image class="imageSpread"
		style="--position: 2"
		alt="grid2."
		width=" 100"
		height="200"
		src="/assets/home/scene 1.jpeg"
	/>

	<Image class="imageSpread"
		style="--position: 3"
		alt="grid3."
		width=" 100"
		height="200"
		src="/assets/home/man shopping.jpeg"
	/>

	<Image class="imageSpread"
		style="--position: 4"
		alt="grid4."
		width=" 100"
		height="200"
		src="/assets/home/iro blazer.jpg"
	/>

	<Image class="imageSpread"
		style="--position: 5"
		alt="grid5."
		width=" 100"
		height="200"
		src="/assets/home/DaphneBag.jpg"
	/>
	
	<Image class="imageSpread"
		style="--position: 6"
		alt="grid6."
		width=" 100"
		height="200"
		src="/assets/home/rack1.jpg"
	/>

	<Image class="imageSpread"
		style="--position: 7"
		alt="grid7."
		width=" 100"
		height="200"
		src="/assets/home/stripe shirt2.jpg"
	/>

	<Image class="imageSpread"
		style="--position: 8"
		alt="grid8."
		width=" 100"
		height="200"
		src="/assets/home/zoe garden.jpg"
	/>

</ul>

<style>
	

	
	.imageSpread {
		aspect-ratio: 2 / 3;
		object-fit: cover;
		/* border-radius: 1.5rem; */
		box-shadow: var(--shadow-md);
		/* left: 100%; */

		/* animation: 2s scrolling infinite linear;  */
		/* animation-delay: calc((10s/var(--quantity)) * var(--position) - 1); */
	}
	
	@keyframes scrolling {
		from {
			transform: translate(0%);
		}
		to {
			transform: translate(-100%);
		}
		
	}

	.grid {
		display: grid;
		grid-auto-rows: 1fr;
		gap: 1rem;
		list-style: none;
		padding: 0;
		white-space: nowrap;
	}

	.grid.small {
		grid-template-columns: 1fr 1fr;
		gap: 1.5rem;
	}

	/* If last row contains only one item, make it span both columns. */
	.grid.small > :global(:last-child:nth-child(odd)) {
		grid-column: 1 / 3;
	}

	/* @media (min-width: 50em) { */
		.grid {
			grid-template-columns: 1fr 1fr;
			gap: 4rem;
		}

		.grid.offset {
			--row-offset: 7.5rem;
			padding-bottom: var(--row-offset);
		}

		/* Shift first item in each row vertically to create staggered effect. */
		.grid.offset > :global(:nth-child(odd)) {
			transform: translateY(var(--row-offset));
		}

		/* If last row contains only one item, display it in the second column. */
		.grid.offset > :global(:last-child:nth-child(odd)) {
			grid-column: 2 / 3;
			transform: none;
		}

		.grid.small {
			display: flex;
			/* flex-wrap: wrap; */
			justify-content: center;
			width: 100%;
			height: 80%;
			gap: .01rem;
			/* position: relative; */
		}

		.grid.small > :global(*) {
			flex-basis: 100%;
			white-space: nowrap;
		}
	/* } */
</style>
