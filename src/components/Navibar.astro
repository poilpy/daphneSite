---
import Icon from './Icon.astro';
import ThemeToggle from './ThemeToggle.astro';
import type { iconPaths } from './IconPaths';

const textLinks: { label: string; href: string }[] = [
	// { label: 'Home', href: '/' },
	// { label: 'Services', href: '/Services/' },
	{ label: 'About', href: '/about/' },
    { label: 'Testimonials', href: '/testimonials' },
    { label: 'Contact', href: '/contact' }
];

const servicelinks: { label: string; href: string }[] = [
	{ label: 'Personal Shopping', href: '/services/#personal_shopping' },
	{ label: 'Closet Clean Out & Edit', href: '/services/#Closet_Clean_Out' },
	{ label: 'Online Shopping', href: '/services/#Online_Shopping' },
    { label: 'Online Dating Profile Assistance', href: '/services/#Online_Dating' },
    { label: 'Photo Shoot Styling', href: '/services/#Photo_Shoot' },
    { label: 'Shopping for Teens & Kids', href: '/services/#Teens_Kids' },
    { label: 'Holiday & Gift Shopping', href: '/services/#Gifts' },
    { label: 'A La Carte', href: '/services/#A_La_Carte' }
];
---


<nav class="bg-gradient-to-r from-zinc-400 to-zinc-300 border-gray-200 drop-shadow-md">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <div class="logo">
            <a href="/" class=" space-x-1 rtl:space-x-reverse flex-auto">
                <!-- <img src="https://flowbite.com/docs/images/logo.svg" class="h-8" alt="Flowbite Logo" /> -->
                <span class="self-center text-2xl whitespace-nowrap text-white">Daphne</span>
                <span class="self-center text-2xl whitespace-nowrap text-black">Styles</span>
                <span class="self-end text-xs libre-caslon-text-regular-italic text-white float-right">personal style consultant</span>
            </a>
        </div>
        <button data-collapse-toggle="navbar-dropdown" 
            type="button" 
            class="inline-flex items-center 
                p-2 w-10 h-10 justify-center text-sm 
                text-gray-500  -lg md:hidden 
                hover:bg-gray-100 focus:outline-none 
                focus:ring-2 focus:ring-gray-200 
                dark:text-gray-400 dark:hover:bg-gray-700
                dark:focus:ring-gray-600" aria-controls="navbar-dropdown" aria-expanded="false">
            <span class="sr-only">Open main menu</span>
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
            </svg>
        </button>

        <div class="hidden w-full md:block md:w-auto" id="navbar-dropdown">
            <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 md:space-x-1 rtl:space-x-reverse md:flex-row md:mt-0 ">
            <li>
                <a href="/" class="block py-2 px-3 text-zinc-900 hover:text-zinc-500 md:bg-transparent md:text-zinc-900 md:p-0" aria-current="page">Home</a>
            </li>
            <li>
                <button id="dropdownNavbarLink" data-dropdown-toggle="dropdownNavbar" 
                class="flex items-center justify-between w-full py-2 px-3 text-gray-900 
                hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-zinc-500 md:p-0 
                md:w-auto dark:text-white md:dark:hover:text-blue-500 dark:focus:text-white 
                dark:border-gray-700 dark:hover:bg-gray-700 md:dark:hover:bg-transparent">Services 
                <svg class="w-2.5 h-2.5 ms-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
                    </svg></button>
                <!-- Dropdown menu -->
                <div id="dropdownNavbar" class="z-10 hidden font-normal bg-white divide-y divide-gray-100  shadow w-44">
                    <ul class="py-1 text-sm text-zinc-700 dark:text-zinc-500" aria-labelledby="dropdownLargeButton">

                        {
                            servicelinks.map(({ label, href }) => (
                                        <li class="block py-2 px-3 
                                            text-gray-900 hover:bg-gray-100 md:hover:bg-transparent 
                                            md:hover:text-zinc-500 md:p-0">
                                            <a
                                                aria-current={Astro.url.pathname === href}
                                                class:list={[
                                                    'link',
                                                    {
                                                        active:
                                                            Astro.url.pathname === href ||
                                                            (href !== '/' && Astro.url.pathname.startsWith(href)),
                                                    },
                                                    
                                                ]}
                                                href={href}
                                            >
                                                {label}
                                            </a>
                                        </li>
                                    ))
                            }
                    </ul>
                </div>
            </li>
            {
            textLinks.map(({ label, href }) => (
                            <li class="block py-3 px-3 
                                text-gray-900 hover:bg-gray-100 md:hover:bg-transparent 
                                md:border-0 md:hover:text-zinc-500 md:p-0">
                                <a
                                    aria-current={Astro.url.pathname === href}
                                    class:list={[
                                        'link',
                                        {
                                            active:
                                                Astro.url.pathname === href ||
                                                (href !== '/' && Astro.url.pathname.startsWith(href)),
                                        },
                                        
                                    ]}
                                    href={href}
                                >
                                    {label}
                                </a>
                            </li>
                        ))
                }
            </ul>
        </div>
    </div>
  </nav>
  



<style>
    ul {
        border-radius: 0.5rem;
    }

    li {
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		font-size: var(--text-md);
		line-height: 1.2;
		list-style: none;
		padding: 1rem;
        /* background-color: rgba(110, 110, 110, 0.212); */
        
		/* border-bottom: 1px solid var(--gray-800); */
	}

    .logo {
        width: 12rem;
        height: 4rem;
        padding: .5rem;
        display: inline-block;
        text-wrap: balance;
    }

    /* .leo {
        
		background-image: url('/assets/backgrounds/leopard.png');
    } */
</style>