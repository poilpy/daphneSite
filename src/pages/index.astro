---

<BaseLayout>
	<div class="stack gap-10 lg:gap-10">
		<div class="wrapper stack gap-8 lg:gap-20">
			<header class="hero">
				<Hero
					title="Hi!"
					align="start"
				>
					<!-- <div class="roles">
						<Pill><Icon icon="code" size="1.33em" /> Developer</Pill>
						<Pill><Icon icon="microphone-stage" size="1.33em" /> Speaker</Pill>
						<Pill><Icon icon="pencil-line" size="1.33em" /> Writer</Pill>
					</div> -->
				</Hero>

				<img class=""
				alt="Daphne with dog."
					width="480"
					height="480"
					src="/assets/bio page 10.jpg"
				/>
			</header>

			<!-- <Skills /> -->
		</div>
		<div class="gallery">
			<Grid variant="small">

		</div>


		<section class="section  box">

				<div class="border border-gray-800 shadow-sm">
					<figure class="flex flex-col items-center justify-center p-8 text-center  border-b border-gray-400 rounded-t-lg md:rounded-t-none md:rounded-ss-lg md:border-e dark:bg-gray-800 dark:border-gray-700">
						<blockquote class="max-w-2xl mx-auto mb-4 text-gray-500 lg:mb-8 dark:text-gray-400">
